<div class="row clearfix">
  <% if mou_item.completed? %>
    <div class="complete">
  	  <%= link_to "完成", complete_mou_list_mou_item_path(@mou_list, mou_item.id), method: :patch %>
    </div>	
    <div class="mou_item">
  	  <p style="opacity: 0.4;"><strike><%= mou_item.content %></strike></p>
    </div>
    <div class="trash">
  	  <%= link_to "刪除", mou_list_mou_item_path(@mou_list, mou_item.id), method: :delete, data: { confirm: "Are you sure ?" } %>
    </div>
  <% else %>
    <div class="complete">
  	  <%= link_to "完成", complete_mou_list_mou_item_path(@mou_list, mou_item.id), method: :patch %>
    </div>	
    <div class="mou_item">
  	  <p><%= mou_item.content %></p>
    </div>
    <div class="trash">
  	  <%= link_to "刪除", mou_list_mou_item_path(@mou_list, mou_item.id), method: :delete, data: { confirm: "Are you sure ?" } %>
    </div>
  <% end %>
</div>